<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.lawrence.popula.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
    android:textSize="30dp"
    android:text="Your Name:"
        android:layout_weight="0"/>

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:textSize="22dp"
        android:hint="Bob"
        android:imeOptions="actionSend"
        android:maxLines="1"
        android:inputType="text"/>

    <Button
        android:id="@+id/nameInputButton"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Save"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Frequency:"
            android:layout_weight="0"/>

        <EditText
            android:id="@+id/frequencyInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:textSize="22dp"
            android:hint="5.0 Seconds"
            android:imeOptions="actionSend"
            android:maxLines="1"
            android:inputType="text"/>

        <Button
            android:id="@+id/frequencyInputButton"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Number of Texts"
            android:layout_weight="0"/>

        <EditText
            android:id="@+id/timesRepeatedInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:textSize="22dp"
            android:hint="20"
            android:imeOptions="actionSend"
            android:maxLines="1"
            android:inputType="text"/>

        <Button
            android:id="@+id/repeatButton"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Your Friends: "
            android:layout_weight="0"/>

        <EditText
            android:id="@+id/girlfriendsInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:textSize="22dp"
            android:hint="Juliet"
            android:imeOptions="actionSend"
            android:maxLines="1"
            android:inputType="text"/>

        <Button
            android:id="@+id/girlfriendsButton"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
/>
</LinearLayout>
